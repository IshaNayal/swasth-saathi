// Prisma schema for Swasth Saathi production backend
// PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id            String   @id @default(uuid())
  phone_number  String   @unique
  role          String
  language      String?
  created_at    DateTime @default(now())
  healthProfile HealthProfile?
  symptomLogs   SymptomLog[]
  moodLogs      MoodLog[]
  medicineLogs  MedicineLog[]
  reports       Report[]
  feedbacks     Feedback[]
  otps          OTP[]
}

model HealthProfile {
  id               String   @id @default(uuid())
  user_id          String   @unique
  blood_group      String?
  height           Float?
  weight           Float?
  chronic_conditions Json?
  user             User     @relation(fields: [user_id], references: [id])
}

model SymptomLog {
  id         String   @id @default(uuid())
  user_id    String
  symptoms   Json
  severity   Int
  duration   Int
  risk_level String?
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
}

model MoodLog {
  id          String   @id @default(uuid())
  user_id     String
  mood        String
  stress_level Int
  created_at  DateTime @default(now())
  user        User     @relation(fields: [user_id], references: [id])
}

model MedicineLog {
  id           String   @id @default(uuid())
  user_id      String
  medicine_name String
  dosage       String
  status       String
  user         User     @relation(fields: [user_id], references: [id])
}

model Report {
  id             String   @id @default(uuid())
  user_id        String
  file_url       String
  analysis_result Json?
  created_at     DateTime @default(now())
  user           User     @relation(fields: [user_id], references: [id])
}

model Feedback {
  id        String   @id @default(uuid())
  user_id   String
  rating    Int
  category  String
  message   String
  user      User     @relation(fields: [user_id], references: [id])
}

model OTP {
  id        String   @id @default(uuid())
  user_id   String
  otp_hash  String
  expires_at DateTime
  user      User     @relation(fields: [user_id], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  user_id   String?
  event     String
  details   Json?
  created_at DateTime @default(now())
}
